@import url('/node_modules/css-reset/reset.css')

html, body
  font-family "ヒラギノ角ゴ Pro W3", "Hiragino Kaku Gothic Pro0"

body
  padding 0
  margin 0

*
  word-wrap break-word

img
  width 100%

header
  width 100%
  background url(img/eyecatch) no-repeat
  background-size cover
  padding 10px 10px
  height 420px
  h1
    color white
    padding 30px
    font-size 60px
    line-height 1em

theme(color)
  margin 5px
  h3
    border 1px solid white
    padding 0px 0px 0px 10px
    font-size 12px
    background color
  ul
    font-size 12px
    margin 5px
    margin-top 3px

.row
  display flex
  width 100%

row-margin()
  >*
    margin 10px 10px

// TODO: out overflow
.col-half
  width 50%
  overflow hidden


#abstract
  background #33B9FF
  color white
  .row.up
    row-margin()
    h2
      padding 10px
      width 40%
      font-size 2em
      line-height 1em
    .subtext
      padding 10px
      width 60%
  .row.down.themes
    row-margin()
    section
      &.theme-1
        theme(#CCD200)
      &.theme-2
        theme(#747474)
      &.theme-3
        theme(#15CA40)

#gallery
  background #8077AB
  color white
  .img-block
    padding 10px
    margin 10px !important
    border 1px solid white
    h3
      font-size 20px
      font-weight bold
      line-height 1em
      padding 5px
    &.img-block-3
      width 30%
    &.img-block-4
      width 25%
    >img
      height 140px
      width 100%

#days
  margin-top 20px
  .headline
    padding-top 10px
    position relative
    h2.days-title
      font-size 2em
      margin 5px
      line-height 1em
      span
        background #659BFC
        color white
        padding 5px
        margin 5px
    >p
      position absolute
      bottom 0
      color #659BFC
      margin-left 13px

#profile
  background #D4F8FF
  margin 10px
  padding 5px
  .profile-main
    margin 5px
    width 60%
    .name
      font-weight bold
      text-align center
      margin 5px
    .belong
      text-align center
      margin 5px
  .sub-images
    margin 5px
    width 40%
    img
      width 100%


#options
  width 100%
  #food
    margin 5px
    #menu
      width 40%
    p.help
      width 60%
      font-size 10px
      padding 5px
  #depart
    background url(img/note.jpg) no-repeat
    background-size 100%
    padding 81px 27px 168px 31px
    p
      color #659BFC !important
      font-size 23px
      padding-bottom 10px
    table
      border-collapse separate
      border-spacing 3px
      width 100%
      td
        text-align left
      td:nth-of-type(2)
        text-align right

#menu
  border solid 5px white
  background white
  box-shadow 0 0 0 1px, 0 0 0 1px inset
  position relative
  top -50px
  font-size 10px
  h5
    background #FFFCC7
    text-align center
    border-left solid 1px
    border-top solid 1px
    border-right solid 1px
    padding 2px
  table
    margin 5px
    width 90%

img.day
  margin 0 auto




hr
  width 95%


table.time 
  width 100%
  font-size 10px

table.time
  border solid 1px white


table.time td 
  background #B6FCFF
  border solid 1px white


table.time th 
  background #5ACDFF
  color white
  border solid 1px white


td.thd 
  background #DADADA !important
  width 30%


td, th 
  text-align center


.row.spot
  >div:nth-of-type(1) 
    width 40%
  >div:nth-of-type(2) 
    width 261px


.spot
  >div:nth-of-type(1) 
    width 40%
  >div:nth-of-type(2) 
    width 50%
  h5
    font-weight bold
  img 
    width 244px

#room
  border solid 1px #659BFC
  margin 30px auto
  width 90%
  padding 0
  .col-ll 
    margin 0
    padding 0
    h5 
      color #659BFC
      padding 0
      span 
        background #659BFC
        color white
        padding 1px 3px
        margin-right 5px
  .col-rr img
    width 600px
  .col 
    width 200px


.auther
  text-align right
  padding 0 20px
  a 
    color black !important


.share 
  text-align right
  padding 0 20px



